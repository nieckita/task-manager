// Dies ist Ihre Prisma-Schema-Datei.
// Weitere Informationen finden Sie in der Dokumentation: https://pris.ly/d/prisma-schema

generator client {
  // Der Prisma-Client wird hier generiert
  provider = "prisma-client-js"
  // Der Pfad, an dem der generierte Client gespeichert wird
  output   = "../lib/generated/prisma"
}

datasource db {
  // Datenbank-Provider (PostgreSQL für Neon DB)
  // Hinweis für Prisma 7: Die URL wird jetzt in der 'prisma.config.ts' verwaltet
  provider = "postgresql"
}

// Modell für die Aufgabenverwaltung (Task Management)
model Task {
  id          String   @id @default(cuid())
  title       String // Titel der Aufgabe
  description String? // Optionale Beschreibung
  priority    String   @default("Medium") // Prioritätsstufen: Low, Medium, High
  status      String   @default("Todo") // Status: Todo, In_Progress, Done
  createdAt   DateTime @default(now()) // Erstellungsdatum
  updatedAt   DateTime @updatedAt // Automatisches Update-Datum
}

// Modell für externe Authentifizierungs-Provider (z.B. Google, GitHub)
// Notwendig für Auth.js (NextAuth)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Verknüpfung zum User-Modell mit Kaskadierung (Löschen)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Modell für die Sitzungsverwaltung (Session Management)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Zentrales Benutzermodell
model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  // Das Passwort-Feld für die manuelle Credentials-Authentifizierung
  password      String
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relationen zu anderen Modellen
  accounts Account[]
  sessions Session[]
}

// Modell für Verifizierungstoken (z.B. E-Mail-Bestätigung oder Passwort-Reset)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
